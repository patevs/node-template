{
  "name": "node-template",
  "version": "1.18.0",
  "description": "Repository Template for NodeJS Projects",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/node-template.git"
  },
  "type": "module",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "updates": "script-progress node ./bin/checkUpdates",
    "release": "np"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "chalk": "^5.1.2",
    "commitlint-config-gitmoji": "^2.2.6",
    "husky": "^7.0.4",
    "np": "^7.6.1",
    "script-progress": "^1.0.5"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "subject-empty": [
        0,
        "never"
      ],
      "type-empty": [
        0,
        "never"
      ]
    }
  }
}
